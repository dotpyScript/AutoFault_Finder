      <script>
        // Making an AJAX request to fetch the list of codes
        $.ajax({
          url: '/listCode',  // URL to your route
          method: 'GET',
          success: function (response) {
            // Handle the success case (e.g., render codes to the DOM)
            // This part depends on how you want to display the list
          },
          error: function (response) {
            // Handle the error response and show with Toastify
            const errorMessage = response.responseJSON.message || "Something went wrong!";
            Toastify({
              text: errorMessage,
              duration: 3000,
              gravity: "top",
              position: "right",
              backgroundColor: "linear-gradient(to right, #ff5f6d, #ffc371)",
              close: true
            }).showToast();
          }
        });
      </script>

      <script>
        // Handle delete button click
        $('.delete-btn').click(function () {
          const codeId = $(this).data('id');

          if (confirm('Are you sure you want to delete this code?')) {
            $.ajax({
              url: `/codes/${codeId}`,
              type: 'DELETE',
              success: function (response) {
                // Show success message with Toastify
                Toastify({
                  text: response.message,
                  duration: 3000,
                  gravity: "top",
                  position: "right",
                  backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
                  close: true
                }).showToast();

                // Optionally remove the deleted code's row from the table
                $(`tr[data-id="${codeId}"]`).remove();
              },
              error: function (response) {
                Toastify({
                  text: response.responseJSON.message,
                  duration: 3000,
                  gravity: "top",
                  position: "right",
                  backgroundColor: "linear-gradient(to right, #ff5f6d, #ffc371)",
                  close: true
                }).showToast();
              }
            });
          }
        });
      </script>

      <!-- search table 2 Script -->
      <script>
        $("#search").on("keyup", function () {
          var value = $(this).val().toLowerCase();
          $("#table tr").filter(function () {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
          });
        });
      </script>

